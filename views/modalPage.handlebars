<main class="content">

  <div id="modal-background"></div>
  <div id="post-modal">
      <div class="modal-dialog">

          <div class="modal-title">
              <h3>{{title}}!</h3>
              <button type="button" id="add-to-cart-button" class="cart-button {{cakeId}}" cakeid = {{cakeId}}>Add to Cart</button>
              <a href="/"><button type="button" id="close-modal" class="close-modal-button">Cancel</button></a>
          </div>

          <div class="modal-image-container">
              <img src={{photoURL}} alt="recipe name!">
          </div>
          <div class="modal-info-container">
              <div>Type</div>
              <div>Dietary Tage</div>
              <div>Serving number</div>
              <div>Prep Time</div>
              <div>Cook Time</div>
              <span class="cake-flavor">{{type}}</span>
              <span class="dietary-tag">{{dietaryTag}}</span>
              <span class="serving-number">{{serves}}</span>
              <span class="prep-time">{{prepTime}} minutes</span>
              <span class="cook-time">{{cookTime}} minutes</span>
          </div>
          <div class="modal-footer">
              <a href="/recipe/{{cakeId}}" class="recipe-link">See Full Recipe</a>
          </div>
      </div>
  </div>


</main>
